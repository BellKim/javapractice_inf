package GUI_make_info;

import java.awt.BorderLayout;
import java.awt.Font;

import javax.swing.JButton;
import javax.swing.JPanel;
import javax.swing.JScrollPane;
import javax.swing.JTable;
import javax.swing.table.DefaultTableModel;

public class kitchen_main extends JPanel{
	JButton popupbutton;
	
	DefaultTableModel tableModel;
	JTable table;
	JScrollPane scroll;
	
	public kitchen_main(){
		popupbutton = new JButton("버튼입니다.");
		
	/*	Font font = new Font("sansSerif", 0, 12);
		
		popupbutton.setFont(Font);*/
		
	JPanel ButtonP = new JPanel();
	
	ButtonP.add(popupbutton);
	
	JPanel up = new JPanel(new BorderLayout(0, 5));
	
	up.add("South", ButtonP);
	//
	JPanel center = new JPanel(new BorderLayout(0, 5));
	center.add("Center", scroll);
	center.add("North", up);
	
	setLayout(new BorderLayout());
	add("Center", center);
	
	
		
		
		
	}//end kitchen_main()//////////////////////////

}
